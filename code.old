symbols {
    MOVEAMOUNT: 0
    yPosition: 1
    xPosition: 2
    up: 0
    right: 1
    down: 2
    left: 3
    cat: 0
    robot: 1
    ball: 2
    myself: -1
    x: 0
}

cat_event_start:
    push -191
    push 0
    gotoxy
    push 10
    setVar MOVEAMOUNT
    push 0
    setVar yPosition
1:  fetchInput up
    jumpIfNot 2
    loadVar MOVEAMOUNT
    incVar yPosition
2:  fetchInput down
    jumpIfNot 3
    push 0
    loadVar MOVEAMOUNT
    sub
    incVar yPosition
3:  push -191
    loadVar yPosition
    gotoxy
    loopJump 1
    stop

cat_event_space:
    clone ball
    push 0.1s
    wait
    stop

ball_event_start:
    hide
    stop

ball_event_clone:
    push 50
    setSize
    fetchPosition cat
    gotoxy
    show
1:  fetchTouching robot
    push 200
    fetch x
    greaterThan
    or
    jumpIfNot 2
    delete
2:  push 20
    movesteps
    loopJump 1
    stop

robot_event_start:
    hide
1:  push 1
    push 2
    fetchRandom
    push 212
    push -150
    push 150
    fetchRandom
    glideto
    clone myself
    loopJump 1
    stop

robot_event_clone:
    setCostume 0
    show
    push 50
    setSize
1:  push 3
    movesteps
    fetchTouching ball
    jumpIfNot 2
    setCostume 1
    push 0.2s
    wait
    delete
2:  loopJump 1

