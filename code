symbols {
    MOVEAMOUNT: 0
    yPosition: 1
    xPosition: 2
    up: 0
    right: 1
    down: 2
    left: 3
    cat: 0
    robot: 1
    ball: 2
    myself: -1
    x: 0
}

cat_event_start:
    push -191
    push 0
    gotoxy
    push 10
    setVar MOVEAMOUNT
    push 0
    setVar yPosition
    push 0
    setVar xPosition
1:  fetchInput up
    jumpIfNot 2
    loadVar MOVEAMOUNT
    incVar yPosition
2:  fetchInput down
    jumpIfNot 3
    push 0
    loadVar MOVEAMOUNT
    sub
    incVar yPosition
3:  fetchInput right
    jumpIfNot 4
    loadVar MOVEAMOUNT
    incVar xPosition
4:  fetchInput left
    jumpIfNot 5
    push 0
    loadVar MOVEAMOUNT
    sub
    incVar xPosition
5:  loadVar xPosition
    loadVar yPosition
    gotoxy
    loopJump 1
    stop
